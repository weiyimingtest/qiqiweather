<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@android:color/background_light">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="#b1dc3f">
    </FrameLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="36dp" android:background="#a2d80f">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市管理"
                android:id="@+id/cityManagerLabelTextView" android:textSize="16dp" android:textColor="@android:color/white"
                android:layout_gravity="center_vertical" android:layout_marginLeft="8dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp" android:background="#72a232">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView"/>
    </FrameLayout>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityScrollView">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cityListView" android:divider="#72a232"/>
    </ScrollView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="8dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addCityImageView" android:longClickable="false"
                android:src="@drawable/ic_citymanager_add" android:layout_gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加新的城市"
                android:id="@+id/addCityTextView"
                android:textIsSelectable="false" android:textSize="28dp"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>